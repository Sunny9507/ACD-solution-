#include <bits/stdc++.h>
#include <vector>
using namespace std;
int main (){
    int t; cin >> t;
    while (t--){
        int n; cin >> n;
        int a[n];
        for(int i=0; i<n; i++){
            cin >> a[i];
        }
        int d = *max_element(a, a+n);
        int e = *min_element(a, a+n);
        cout << d-e << endl;
    }
    return 0;
}
